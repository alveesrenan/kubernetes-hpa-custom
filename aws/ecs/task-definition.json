{
  "family": "service-kubernetes-hpa-custom",
  "containerDefinitions": [
    {
      "name": "kubernetes-hpa-custom",
      "image": "006223355744.dkr.ecr.us-east-1.amazonaws.com/kubernetes-hpa-custom",
      "cpu": 0,
      "memory": 384,
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080,
          "protocol": "tcp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "kubernetes-hpa-custom-logs",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "kubernetes-hpa-custom-logs"
        }
      },
      "links": [
        "rabbitmq-broker"
      ],
      "environment": [
        {
          "name": "PROFILE",
          "value": "prod"
        },
        {
          "name": "RABBITMQ_HOST",
          "value": "rabbitmq-broker"
        },
        {
          "name": "RABBITMQ_USER",
          "value": "guest"
        },
        {
          "name": "RABBITMQ_PASS",
          "value": "guest"
        }
      ]
    },
    {
      "name": "rabbitmq-broker",
      "image": "rabbitmq:3-management-alpine",
      "cpu": 0,
      "memory": 256,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 5672,
          "hostPort": 5672
        },
        {
          "containerPort": 15672,
          "hostPort": 15672
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "rabbitmq-broker-logs",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "rabbitmq-broker-logs"
        }
    }
  ]
}
